@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <form method="post" enctype="multipart/form-data">
        <label>Please upload an image</label>
        <br />
        <input type="file" asp-for="Image" />
        <br />
        <input class="btn btn-primary" type="submit" value="submit">
    </form>
    <br />
    @if (Model.cd != null)
    {
        <img src="~/images/@Model.Image.FileName" height="200" width="250" alt="Alternate Text" />
        <br />
        <label asp-for="cd.Name"></label>
        <label>@Model.cd.Name</label>
        <br />
        <label asp-for="cd.AmountOfShedding"></label>
        <label>@Model.cd.AmountOfShedding</label>
        <br />
        <label asp-for="cd.EasyToGroom"></label>
        <label>@Model.cd.EasyToGroom</label>
        <br />
        <label asp-for="cd.GeneralHealth"></label>
        <label>@Model.cd.GeneralHealth</label>
        <br />
        <label asp-for="cd.KidFriendly"></label>
        <label>@Model.cd.KidFriendly</label>
        <br />
        <label asp-for="cd.PetFriendly"></label>
        <label>@Model.cd.PetFriendly</label>
        <br />
        <label asp-for="cd.PotentialForPlayfulness"></label>
        <label>@Model.cd.PotentialForPlayfulness</label>
    }

</div>
